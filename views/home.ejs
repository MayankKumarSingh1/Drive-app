<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <script src="https://unpkg.com/@tailwindcss/browser@4"></script>
    <link href="https://cdn.jsdelivr.net/npm/flowbite@3.1.2/dist/flowbite.min.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/remixicon@4.5.0/fonts/remixicon.css" rel="stylesheet" />
    <title>File Upload</title>
  </head>

  <body class="bg-gray-100 dark:bg-gray-900 text-gray-800 dark:text-white transition-all duration-300 font-sans">
    <main class="p-6 min-h-screen flex flex-col items-center gap-6">
      <!-- Upload Button -->
      <button onclick="showPopUp()" class="flex items-center gap-2 bg-indigo-600 hover:bg-indigo-700 text-white font-semibold px-6 py-2 rounded-xl shadow-md transition cursor-pointer">
        <i class="ri-upload-cloud-line text-xl cursor-pointer"></i> Upload File
      </button>

      <!-- Upload Modal -->
      <div class="pop hidden fixed inset-0 bg-black/40 backdrop-blur-sm z-50 flex items-center justify-center">
        <div class="relative bg-white dark:bg-gray-800 w-full max-w-md p-6 rounded-xl shadow-lg animate-fade-in">
          <!-- Close Button -->
          <button onclick="hidePopUp()" class="absolute top-4 right-4 text-gray-500 dark:text-gray-300 hover:text-red-500 text-2xl">
            <i class="ri-close-line"></i>
          </button>

          <!-- Upload Form -->
       <form action="/upload" method="post" enctype="multipart/form-data" class="space-y-4">
      <div class="flex flex-col items-center justify-center w-full h-60 border-2 border-dashed border-gray-400 rounded-lg bg-gray-50 dark:bg-gray-700 hover:bg-gray-100 dark:hover:bg-gray-600 transition relative">
        <div class="flex flex-col items-center justify-center p-6 text-gray-500 dark:text-gray-300 text-center">
          <svg class="w-10 h-10 mb-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16v2a2 2 0 002 2h12a2 2 0 002-2v-2M12 12V4m0 0L8 8m4-4l4 4" />
          </svg>
          <p class="text-sm font-medium">Drag & drop file here or click browse</p>
          <p class="text-xs mb-4">SVG, PNG, JPG or GIF (MAX. 800x400px)</p>
          <!-- Browse Button -->
          <button type="button" onclick="document.getElementById('dropzone-file').click()" class="bg-indigo-600 hover:bg-indigo-700 text-white px-4 py-1 rounded-md text-sm font-medium shadow-sm transition cursor-pointer">
            Browse
          </button>
        </div>
        <input id="dropzone-file" name="file" type="file" class="hidden" required />
      </div>

      <div class="text-right">
        <button type="submit" class="bg-indigo-600 hover:bg-indigo-700 text-white px-5 py-2 rounded-lg font-semibold shadow-sm transition cursor-pointer">
          Upload File
        </button>
      </div>
</form>

        </div>
      </div>

      <!-- Uploaded Files -->
      <div class="files w-full max-w-xl mt-4 space-y-3">
        <h2 class="text-xl font-semibold text-center text-gray-800 dark:text-white">My Files</h2>

        <% files.forEach((file) => { %>
          <div class="bg-gray-200 dark:bg-gray-700 px-4 py-2 rounded-lg flex justify-between items-center hover:bg-gray-300 dark:hover:bg-gray-600 transition cursor-pointer shadow-sm">
            <span class="truncate font-medium text-gray-800 dark:text-white"><%= file.originalname %></span>
            <a href="/download/<%= file._id %>" class="text-indigo-600 dark:text-indigo-400 hover:text-indigo-800 dark:hover:text-indigo-200 text-xl">
              <i class="ri-download-line"></i>
            </a>
          </div>
        <% }) %>
      </div>
    </main>

    <script>
      function showPopUp() {
        document.querySelector('.pop').style.display = 'flex';
      }

      function hidePopUp() {
        document.querySelector('.pop').style.display = 'none';
      }
      
       document.addEventListener("DOMContentLoaded", function () {
    const popup = document.querySelector('.pop');
    const modalBox = popup.querySelector('div'); // The container of the modal content

    popup.addEventListener('click', function (e) {
      // Only hide if the user clicked outside the modal box
      if (!modalBox.contains(e.target)) {
        hidePopUp();
      }
    });
  });
    </script>
  </body>
</html>
